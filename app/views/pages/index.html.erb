<h1>Listing pages</h1>

<table class="table table-striped">
<thead>
<tr>
  <th>Title</th>
  <th>Path</th>
  <th>Layout</th>
  <th>Author</th>
  <!--<th colspan="3"></th>-->
</tr>
</thead>
<tbody>
<% @pages.each do |page| %>
    <tr>
      <td><%= page.title %></td>
      <td><%= link_to "#{pages_path}/#{page.path}", "#{pages_url}/#{page.path}" %></td>
      <td><%= page.layout %></td>
      <td><%= !page.user.nil? ? page.user.email : 'AutoGenerated' %></td>
      <td>
        <%= link_to 'Show', page, class: 'btn btn-xs btn-primary' %>
        <%= link_to 'Edit', edit_page_path(page), class: 'btn btn-xs btn-default' %>
        <% if !page.required %>
            <%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
        <% end %>
      </td>
    </tr>
<% end %>
</tbody>
</table>

