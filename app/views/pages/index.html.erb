<div class="container">
  <h1>Listing pages</h1>

  <table class="table table-striped">
    <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @pages.each do |page| %>
        <tr>
          <td><%= page.title %></td>
          <td><%= page.body %></td>
          <td><%= link_to 'Show', page %></td>
          <td><%= link_to 'Edit', edit_page_path(page) %></td>
          <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Page', new_page_path %>
</div>